{
  "settings": {
    "number_of_shards": 10,
    "number_of_replicas": 0,
    "index.mapping.total_fields.limit": 20000,
    "analysis": {
      "analyzer": {
        "english_plain": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "decimal_digit",
            "asciifolding",
            "english_stop",
            "english_stemmer"
          ]
        },
        "english_html": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "decimal_digit",
            "asciifolding",
            "english_stop",
            "english_stemmer"
          ]
        }
      },
      "filter": {
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        }
      },
      "normalizer": {
        "id_normalizer": {
          "type": "custom",
          "char_filter": [
            "zeros_prefix_trim"
          ],
          "filter": [
            "trim"
          ]
        }
      },
      "char_filter": {
        "zeros_prefix_trim": {
          "type": "pattern_replace",
          "pattern": "^[0\\s]+",
          "replacement": ""
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "dynamic_templates": [
      {
        "scores_long": {
          "match_mapping_type": "long",
          "mapping": {
            "type": "double"
          }
        }
      },
      {
        "scores_double": {
          "match_mapping_type": "double",
          "mapping": {
            "type": "double"
          }
        }
      }
    ],
    "properties": {
      "name": {
        "properties": {
          "en": {
            "type": "text",
            "analyzer": "english_plain"
          }
        }
      },
      "otherNames": {
        "properties": {
          "en": {
            "type": "text",
            "analyzer": "english_plain"
          }
        }
      },
      "score": {
        "type": "double"
      },
      "scores": {
        "dynamic": true,
        "properties": {}
      },
      "mnemonic": {
        "type": "keyword",
        "doc_values": false
      },
      "active": {
        "properties": {
          {{range $i, $claimType := $}}
            {{if $i}},{{end}}
            "{{$claimType.Name}}": {
              "type": "nested",
              "properties": {
                "_id": {
                  "type": "keyword",
                  "doc_values": false
                },
                "confidence": {
                  "type": "double"
                },
                "metaEmbeddedIds": {
                  "type": "keyword",
                  "doc_values": false
                },
                "meta": {
                  "properties": {
                    {{range $i, $metaClaimType := $}}
                      {{if $i}},{{end}}
                      "{{$metaClaimType.Name}}": {
                        "properties": {
                          "meta": {
                            "properties": {
                              {{range $i, $metaClaimType := $}}
                                {{if $i}},{{end}}
                                "{{$metaClaimType.Name}}": {
                                  "properties": {
                                    {{$needsComma := false}}
                                    {{range $i, $field := $metaClaimType.Fields}}
                                      {{if $field.EmbeddedID}}
                                        {{if $needsComma}},{{end}}
                                        {{$needsComma = true}}
                                        "{{$field.Name}}": {
                                          "properties": {
                                            "{{$field.EmbeddedID}}": {
                                              "index": false,
                                              "doc_values": false,
                                              "type": "keyword",
                                              "copy_to": "active.{{$claimType.Name}}.metaEmbeddedIds"
                                            }
                                          }
                                        }
                                      {{end}}
                                    {{end}}
                                  }
                                }
                              {{end}}
                            }
                          }
                          {{range $i, $field := $metaClaimType.Fields}}
                            {{if $field.EmbeddedID}}
                              ,
                              "{{$field.Name}}": {
                                "properties": {
                                  "{{$field.EmbeddedID}}": {
                                    "index": false,
                                    "doc_values": false,
                                    "type": "keyword",
                                    "copy_to": "active.{{$claimType.Name}}.metaEmbeddedIds"
                                  }
                                }
                              }
                            {{end}}
                          {{end}}
                        }
                      }
                    {{end}}
                  }
                }
                {{range $i, $field := $claimType.Fields}}
                  ,
                  "{{$field.Name}}": {{$field.Definition}}
                {{end}}
              }
            }
          {{end}}
        }
      }
    }
  }
}